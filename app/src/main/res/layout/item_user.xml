<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_name"
        style="@style/AppTheme.TextView"
        android:layout_marginBottom="@dimen/min_padding_margin"
        tools:text="Vishwajit Palankar" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/AppTheme.TextView"
        android:layout_marginBottom="@dimen/min_padding_margin"
        tools:text="Khadki, Pune 411003" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_remaining"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/tv_last_payment_date"
            tools:text="300" />

        <TextView
            android:id="@+id/tv_last_payment_date"
            style="@style/AppTheme.TextView"
            android:layout_alignParentRight="true"
            tools:text="26/08/2016" />
    </RelativeLayout>

</LinearLayout>