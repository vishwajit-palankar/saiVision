<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saivision.collection">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SaiVisionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FilterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.UserListingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.UserDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AddCustomerActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>